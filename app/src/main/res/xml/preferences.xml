<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/vpn_settings">

        <ListPreference
            android:entries="@array/log_levels"
            android:entryValues="@array/log_levels"
            android:title="@string/log_level"
            app:defaultValue="warning"
            app:iconSpaceReserved="false"
            app:key="log_level"
            app:singleLineTitle="true" />

        <CheckBoxPreference
            android:title="@string/logs"
            app:defaultValue="false"
            app:iconSpaceReserved="false"
            app:key="logs"
            app:summary="@string/logs_summary" />

        <CheckBoxPreference
            android:title="@string/sniffing"
            app:defaultValue="true"
            app:iconSpaceReserved="false"
            app:key="sniffing"
            app:summary="@string/sniffing_summary" />

        <CheckBoxPreference
            android:title="@string/sniffing_route_only"
            app:defaultValue="true"
            app:iconSpaceReserved="false"
            app:key="sniffing_route_only"
            app:summary="@string/sniffing_route_only_summary" />

        <Preference
            android:title="@string/geoip_geosite"
            app:iconSpaceReserved="false"
            app:key="geoip_geosite" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/split_tunnel"
        app:iconSpaceReserved="false">

        <ListPreference
            android:defaultValue="Blacklist"
            android:entries="@array/split_tunnel_modes"
            android:entryValues="@array/split_tunnel_modes"
            android:title="Mode"
            app:iconSpaceReserved="false"
            app:key="split_tunnel_mode"
            app:summary="@string/split_tunnel_summary" />

        <Preference
            app:iconSpaceReserved="false"
            android:title="@string/split_tunnel_apps"
            app:key="split_tunnel_apps" />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/appearance">
        <CheckBoxPreference
            android:title="@string/black_background"
            app:iconSpaceReserved="false"
            app:key="black_background"
            app:summary="@string/black_background_summary" />
    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/about">

        <Preference
            app:iconSpaceReserved="false"
            app:key="privacy_policy"
            app:title="@string/privacy_policy" />

        <Preference
            app:iconSpaceReserved="false"
            app:key="feedback"
            app:summary="@string/feedback_summary"
            app:title="@string/feedback" />

        <Preference
            app:iconSpaceReserved="false"
            app:key="source_code"
            app:summary="@string/source_code_summary"
            app:title="@string/source_code" />

        <Preference
            app:iconSpaceReserved="false"
            app:key="open_source_licenses"
            app:title="@string/open_source_licenses" />

        <Preference
            android:title="@string/app_version"
            app:iconSpaceReserved="false"
            app:key="app_version"
            app:summary="" />


    </PreferenceCategory>

</PreferenceScreen>